{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "encantis",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#constants"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-dash.encantis",
                    "begin": "--",
                    "end": "\n"
                },
                {
                    "name": "comment.block.encantis",
                    "begin": "-<",
                    "end": ">-"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.encantis",
                    "match": "\\->|=>"
                },
                {
                    "name": "keyword.operator.logical.encantis",
                    "match": "&&|\\|\\||\\?\\?"
                },
                {
                    "name": "keyword.operator.assignment.augmented.encantis",
                    "match": "%=|&=|\\*=|\\+=|-=|/=|\\^=|\\|=|<<=|>>=|\\|\\|=|\\?\\?="
                },
                {
                    "name": "keyword.operator.bitwise.encantis",
                    "match": "<<|>>|&|\\^|\\|"
                },
                {
                    "name": "keyword.operator.comparison.encantis",
                    "match": "<=|<|>=|>"
                },
                {
                    "name": "keyword.operator.comparison.encantis",
                    "match": "==|!="
                },
                {
                    "name": "keyword.operator.assignment.encantis",
                    "match": "="
                },
                {
                    "name": "keyword.operator.bracket.encantis",
                    "match": "\\[|\\]"
                },
                {
                    "name": "keyword.operator.arithmetic.encantis",
                    "match": "/|%|\\*|\\+|-"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.block.encantis",
                    "match": "\\b(block|loop|forever|when|unless|if|while|for|br-if|br|break|continue)(-[0-9A-Za-z_-]*)?\\b"
                },
                {
                    "name": "keyword.control.encantis",
                    "match": "\\b(func|then|elif|else|end|in|do|return-if|return)\\b"
                },
                {
                    "name": "storage.type.encantis",
                    "match": "\\b(func|param|result|memory|import|export|define|type|interface|global|local)\\b"
                },
                {
                    "name": "keyword.logic.encantis",
                    "match": "\\b(or|and|not|xor|as)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.encantis",
                    "begin": "'",
                    "end": "'"
                },
                {
                    "name": "string.quoted.double.encantis",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "entity.name.type.encantis",
                    "match": "\\b(u8|i8|u16|i16|u32|i32|u64|i64|f32|f64|void)\\b"
                },
                {
                    "name": "support.type.encantis",
                    "match": "\\b([A-Z][0-9A-Za-z_-]*)\\b"
                },
                {
                    "name": "support.function.encantis",
                    "match": "\\b(sqrt|ceil|floor|round)\\b"
                },
                {
                    "name": "punctuation.accessor.tuple.encantis",
                    "match": "(?<=[a-z])\\.[0-9]+"
                },
                {
                    "name": "variable.encantis",
                    "match": "\\b[a-z][0-9A-Za-z_-]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.hexadecimal",
                    "match": "0[xX][0-9a-fA-F]+(UL|U|L)?"
                },
                {
                    "name": "constant.numeric.binary",
                    "match": "0[bB][0-1]+(UL|U|L)?"
                },
                {
                    "name": "constant.numeric.octal",
                    "match": "0[oO][0-7]+(UL|U|L)?"
                },
                {
                    "name": "constant.numeric.dozenal",
                    "match": "0[dD][0-9a-bA-B]+(UL|U|L)?"
                },
                {
                    "name": "constant.numeric",
                    "match": "[0-9]+(UL|U|L)?"
                }
            ]
        }
    },
    "scopeName": "source.encantis"
}